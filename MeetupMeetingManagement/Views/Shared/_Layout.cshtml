<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
	@Styles.Render("~/Content/css")
	<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
	@Scripts.Render("~/bundles/modernizr")
	<!-- don't forget the style for ngCloak ... stops the flickering-->
</head>
<body ng-app="myApp" ng-cloak ng-controller="MemberListCtrl as ctrl">
	<div class="navbar navbar-inverse navbar-fixed-top" ng-show="{{!ctrl.user.isAuthenticated}}">
		<div class="container">
			<form ng-submit="ctrl.authenticate()" name="loginForm" class="navbar-form navbar-right">
				<div class="form-group">
					<input type="text" name="username" ng-model="ctrl.model.username" placeholder="username" />
				</div>
				<div class="form-group">
					<input type="text" name="password" ng-model="ctrl.model.password" placeholder="password" />
				</div>
				<input type="submit" class="btn btn-default btn-sm" value="login" />
			</form>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()

		<div class="navbar-fixed-bottom text-center">
			<hr />

			<footer>
				<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			</footer>
		</div>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.min.js"></script>
	<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.0.js"></script>
	<script src="~/Scripts/smart-table.debug.js"></script>
	@*<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap.min.js"></script>*@
	<script src="~/Scripts/ngStorage.min.js"></script>
	@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
		<script src="http://cdn.syncfusion.com/js/web/ej.web.all-latest.min.js"></script>
		<script src="http://cdn.syncfusion.com/js/ej.widget.angular-latest.min.js"></script>*@
	<script src="~/Scripts/application/app.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
